  <div class="agent-box">
    <h2>AI Agent</h2>

    <textarea id="userInput" placeholder="Enter your goal..."></textarea>

    <button onclick="runAgent()">Run Agent</button>

    <div class="output" id="output"></div>
  </div>

  <script>
    function runAgent() {
      const input = document.getElementById("userInput").value;
      const output = document.getElementById("output");

      if (!input) {
        output.innerHTML = "Please enter a goal.";
        return;
      }

      // Simulated agent thinking
      output.innerHTML = "ðŸ¤– Agent thinking...";

      setTimeout(() => {
        output.innerHTML = `
          <strong>Goal:</strong> ${input}<br><br>
          <strong>Agent Plan:</strong><br>
          1. Understand the request<br>
          2. Decide actions<br>
          3. Generate response<br><br>
          âœ… Task completed!
        `;
      }, 1000);
    }
  </script>

