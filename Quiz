<script>
function checkAnswers() {
    let score = 0;
    let total = 17;

    let answers = {
        q1: "7",
        q2: "1/2",
        q3: "7",
        q4: "minimum",
        q5: "1",
        q6: "mean",
        q7: "1/2",
        q8: "4",
        q9: "1/3",
        q10: "7",
        q11: "1/4",
        q12: "10",
        q13: "mode",
        q14: "spread",
        q15: "0",
        q16: "6",
        q17: "median"
    };

    let form = document.forms["quizForm"];
    let resultHTML = "";

    for (let key in answers) {
        let userAnswer = form[key].value.trim().toLowerCase();

        if (userAnswer === answers[key]) {
            score++;
            resultHTML += "<p class='correct'>Question " + key.substring(1) + " is Correct ‚úÖ</p>";
        } else {
            resultHTML += "<p class='wrong'>Question " + key.substring(1) + " is Wrong ‚ùå</p>";
        }
    }

    let percentage = (score / total) * 100;

    resultHTML += "<h3>Your Score: " + score + " / " + total + "</h3>";
    resultHTML += "<h3>Percentage: " + percentage.toFixed(2) + "%</h3>";

    document.getElementById("result").innerHTML = resultHTML;
}
</script>

